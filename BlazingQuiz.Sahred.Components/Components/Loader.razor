@inject IAppState AppState

@if (AppState.LoadingText != null)
{
    <div class="fullscreen d-flex justify-content-center align-items-center">
        <div class="overlay fullscreen">
        </div>
        <div class="bg-white p-4 shadow rounded " style="z-index:2049">
            <span class="h-3 ">@AppState.LoadingText . . . </span>
        </div>
    </div>
}




@code {
    protected override void OnInitialized()
    {
        AppState.OnToggleLoader += StateHasChanged;
    }
}
